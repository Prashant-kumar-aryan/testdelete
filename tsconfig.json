{
  "compilerOptions": {
    "target": "ES2017",  // Ensures modern ES features like Object.entries are available
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "lib": ["ES2017", "DOM"], // Include DOM if using browser-related APIs
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}